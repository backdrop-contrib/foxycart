	$block = array();
	switch ($delta) {
		case 0:
			// FoxyCart: Cart Summary
			$block['subject'] = ''; // Title is displayed in the content so it can be hidden
			$block['content'] = theme('foxycart_summary_cart_block', array('fc_domain' => foxycart_get_domain()));
