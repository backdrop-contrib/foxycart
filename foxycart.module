function foxycart_get_domain() {
	$domain = variable_get('foxycart_subdomain', '');
	if ( (strlen($domain) > 0) && (strpos($domain, '.') === FALSE)) {
		$domain .= ".foxycart.com";
	}
	return $domain;
}

